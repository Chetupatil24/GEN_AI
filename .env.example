# Copy this file to .env and populate with real credentials

# IndicTrans2 Configuration (AI4Bharat Translation Engine)
# Run IndicTrans2 inference server first: python inference_server_simple.py
AI4BHARAT_BASE_URL=http://localhost:5000
AI4BHARAT_TRANSLATE_PATH=/translate
AI4BHARAT_API_KEY=

# Revid.ai API Configuration (required)
REVID_API_KEY=replace-with-revid-key
REVID_BASE_URL=https://api.revid.ai/v1
REVID_WEBHOOK_SECRET=generate-with-openssl-rand-hex-32

# Redis Configuration (for persistent job storage)
# Install Redis: sudo apt install redis-server (Ubuntu) or brew install redis (Mac)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=true
REDIS_JOB_TTL_SECONDS=604800

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5

# Optional Configuration
# REQUEST_TIMEOUT_SECONDS=30.0
# MAX_RETRIES=3
# RETRY_BACKOFF_FACTOR=1.5
