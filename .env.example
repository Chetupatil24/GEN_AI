# ============================================
# Pet Roast AI Service - Environment Variables
# ============================================

# -------------------- Required --------------------

# Revid.ai API Configuration (REQUIRED)
REVID_API_KEY=your_revid_api_key_here
REVID_BASE_URL=https://api.revid.ai/v1
REVID_WEBHOOK_SECRET=

# Backend Integration (REQUIRED for webhook notifications)
BACKEND_WEBHOOK_URL=https://your-backend.railway.app/webhooks/pet-roast-complete
CORS_ORIGINS=["https://your-backend.railway.app"]

# Redis Configuration (REQUIRED for job persistence)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=true
REDIS_JOB_TTL_SECONDS=604800

# -------------------- Optional --------------------

# AI4Bharat / IndicTrans2 Configuration (for Indian language translation)
AI4BHARAT_BASE_URL=http://localhost:5000
AI4BHARAT_API_KEY=

# Sarvam API (Alternative translation service)
SARVAM_API_KEY=your_sarvam_api_key_here

# Request Configuration
REQUEST_TIMEOUT_SECONDS=30.0
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=1.5

# Pet Detection Configuration
PET_DETECTION_MODEL=yolov5s
PET_DETECTION_CONFIDENCE=0.5

# -------------------- Firebase (if needed) --------------------
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key
